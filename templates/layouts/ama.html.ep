<!DOCTYPE html>
<html>
  <head>
    <title>AMA</title>
    %= asset 'ama.js'
    <style>
      a, body { color: #2a2a2a }
      body { font: 0.9em 'Helvetica Neue', Helvetica, sans-serif }
      input[type=text], textarea { width: 600px }
      input.field-with-error, textarea.field-with-error {
        border: 4px solid #f00;
      }
      textarea {
        height: 100px;
      }
      span {
        margin-right: 5px;
      }
    </style>
  </head>
  <body>
    <h1><%= link_to 'Ama' => 'questions' %></h1>
    %= content
  </body>
</html>
